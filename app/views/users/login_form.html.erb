<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="main users-new">
  <div class="container">
    <h1 class="form-heading">ログイン</h1>
    <div class="singup-in">
      <%= link_to("▶初めて登録する方はこちら","/signup") %>
      <p>ごめんなさい😢只今ログイン出来ません😢</p>
      <p>ー復旧まで少々お待ち下さいー</p>
    </div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/login") do %>
          <p>メールアドレス</p>
          <input name="email" value="<%= @email %>">
          <p>パスワード</p>
          <input type="password" name="password" value="<%= @password %>">
          <input class="users-submit" type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>
